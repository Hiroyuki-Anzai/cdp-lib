{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "built/"
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4
    },
    "exclude": [
        "node_modules",
        "built"
    ]
}