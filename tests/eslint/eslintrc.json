{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": "off",
    "semi": ["error", "always"],

    "require-yield": "off",

    "comma-dangle": "off",
    "no-cond-assign": ["error", "always"],
    "no-unused-vars": ["error", {"args": "none"}],
    "no-extra-boolean-cast": "off",
    "no-console": "off"
  }
}
