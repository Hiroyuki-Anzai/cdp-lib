{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": [ "error", 4 ],
    "semi": [ "error", "always" ],

    "comma-dangle": "off",
    "no-cond-assign": [ "error", "always" ],
    "no-unused-vars": ["error", {"args": "none"}],
    "no-console": "off"
  }
}
