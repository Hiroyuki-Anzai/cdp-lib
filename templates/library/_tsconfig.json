{
  "compilerOptions": {
    <%# nodejs %>
    "module": "commonjs",
    <%/ nodejs %>
    <%^ nodejs %>
    "module": "amd",
    <%/ nodejs %>
    "target": "<% es %>",
    "declaration": true,
    "emitBOM": false,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "<% structureConfig.built %>/"
  },
  "exclude": [
    "node_modules",
    "<% structureConfig.pkg %>",
    "<% structureConfig.built %>",
    "<% structureConfig.doc %>",
    "<% structureConfig.task %>",
    "<% structureConfig.test %>"
  ]
}
