{
  "extends": "eslint:recommended",
  "env": {
    "es6": <% es6 %>,
    "node": <% node %>
  },
  "globals": {
      "module": true,
      "require": true,
      "define": true,
      "exports": true
  },
  "rules": {
    "indent": "off",
    "semi": ["error", "always"],

    "require-yield": "off",

    "comma-dangle": "off",
    "no-cond-assign": ["error", "always"],
    "no-unused-vars": ["error", {"args": "none"}],
    "no-console": "off"
  }
}
